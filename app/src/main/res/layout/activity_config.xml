<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">

    <Button
        android:id="@+id/button_agregar"
        android:layout_width="173dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:onClick="agregar_loteria"
        android:text="@string/agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_config" />

    <TextView
        android:id="@+id/tv_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/configtv"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_atras_config"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:onClick="boton_atras"
        android:text="@string/atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_borrar" />

    <Button
        android:id="@+id/button_editar"
        android:layout_width="163dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:onClick="editar_loteria"
        android:text="@string/editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_agregar" />

    <Button
        android:id="@+id/button_borrar"
        android:layout_width="165dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:onClick="borrar_loteria"
        android:text="@string/borrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_editar" />

    <TextView
        android:id="@+id/textView_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/button_atras_config"
        app:layout_constraintTop_toBottomOf="@+id/button_borrar" />

    <Spinner
        android:id="@+id/spinner_device"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toEndOf="@+id/button_atras_config"
        app:layout_constraintTop_toBottomOf="@+id/textView_device" />
</androidx.constraintlayout.widget.ConstraintLayout>